{
  "name": "notification-service",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register src/server.ts",
    "start:prod": "pm2 start ./build/src/server.js -i 5 --attach --watch",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
    "test": "cross-env NODE_ENV=testing jest --coverage=true --detectOpenHandles --watchAll=false"
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "email-templates": "^11.1.1",
    "express": "^4.19.2",
    "nodemailer": "^6.9.13",
    "shelljs": "^0.8.5",
    "typescript": "^5.4.5",
    "typescript-transform-paths": "^3.4.7",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/amqplib": "^0.10.5",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/nodemailer": "^6.4.14",
    "@types/shelljs": "^0.8.15",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0"
  }
}