{
  "name": "auth",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "description": "Authentication microservice for our micro sample app",
  "scripts": {
    "start:dev": "concurrently \"yarn swagger:watch\" \"yarn serve\"",
    "serve": "cross-env NODE_ENV=development nodemon src/index.ts",
    "swagger": "tsoa spec",
    "swagger:watch": "nodemon --watch 'src/**/*' --exec 'yarn swagger'",
    "test": "jest --watchAll"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.test.ts"
    ]
  },
  "author": "Sokritha Yen",
  "dependencies": {
    "@types/on-headers": "^1.0.3",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "on-headers": "^1.0.2",
    "redoc-express": "^2.1.0",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.2.0",
    "winston": "^3.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.7",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}